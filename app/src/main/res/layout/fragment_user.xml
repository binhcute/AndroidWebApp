<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Bottom.UserFragment"
    android:background="#DAE386">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_DangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:onClick="UserLogin"
        android:text="Đăng nhập"
        app:drawableLeftCompat="@drawable/img_user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/txt_ChucNang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chức Năng"
        app:layout_constraintLeft_toLeftOf="@+id/txt_DangNhap"
        app:layout_constraintTop_toBottomOf="@+id/txt_DangNhap"
        app:layout_constraintRight_toRightOf="@+id/txt_DangNhap"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:text="Logout"
        android:onClick="UserLogout"
        app:layout_constraintEnd_toEndOf="@+id/txt_ChucNang"
        app:layout_constraintTop_toBottomOf="@+id/txt_ChucNang"
        tools:ignore="OnClick" />


</androidx.constraintlayout.widget.ConstraintLayout>